{% extends 'RedKiteCmsBundle:Block:Editor/Translation/_translation.html.twig' %}

{% form_theme form 'RedKiteCmsBundle:Bootstrap:' ~ bootstrap_version ~ '/FormTheme/forms.html.twig' %}

{% block content %}
<form id="al_item_form">
    <table>
        <tr>
            <td>{{ form_label(form.href, "Href", {'cms_language': cms_language}) }}</td>
            <td class="al_pages_selector"></td>
            <td>{{ form_errors(form.href) }} {{ form_widget(form.href) }} </td>
        </tr>
        <tr>
            <td>{{ form_label(form.value, "Displayed value", {'cms_language' : cms_language}) }}</td>
            <td colspan="2">                
                {{ form_errors(form.value) }} {{ form_widget(form.value) }}
            </td>
        </tr>
        {{ form_rest(form) }}
        <tr>
            <td colspan="3" style="text-align: right">
                <a class="al_editor_save btn btn-primary" href="#" >{{ 'Save'|trans({}, 'RedKiteCmsBundle', cms_language) }}</a>
            </td>
        </tr>
    </table>
</form>
{% endblock %}
