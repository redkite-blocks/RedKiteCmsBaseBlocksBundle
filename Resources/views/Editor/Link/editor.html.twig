{% form_theme form 'RedKiteCmsBundle:Bootstrap:' ~ bootstrap_version ~ '/FormTheme/forms.html.twig' %}

<form id="al_item_form">
    <table>
        <tr>
            <td>{{ form_label(form.href) }}</td>
            <td class="al_pages_selector"></td>
            <td>{{ form_errors(form.href) }} {{ form_widget(form.href) }} </td>
        </tr>
        <tr>
            <td>{{ form_label(form.value) }}</td>
            <td colspan="2">                
                {{ form_errors(form.value) }} {{ form_widget(form.value) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(form.class) }}</td>
            <td colspan="2">                
                {{ form_errors(form.class) }} {{ form_widget(form.class) }}
            </td>
        </tr>
        {{ form_rest(form) }}
    </table>
</form>